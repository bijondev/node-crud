<% include partials/header.ejs %>
<div class="container">
    <div class="table-wrapper">
        <% if (contacts.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Number</th>
                        <th scope="col">Note</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% contacts.forEach((row, index) => { %>
                        <tr>
                            <th scope="row"><%= row.id %></th>
                            <td><%= row.name %></td>
                            <td><%= row.number %></td>
                            <td><%= row.notes %></td>
                            <td>
                                <a href="/edit/<%= row.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= row.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No rows found. Go <a href="/add" >here</a> to add rows.</p>
        <% } %>
    </div>
</div>
</body>
</html>
